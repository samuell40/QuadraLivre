generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String     @id @default(auto()) @map("_id") // MongoDB usa ObjectId como padr√£o
  nome        String
  email       String     @unique
  senha       String
  permissaoId String
  foto        String?    @db.VarChar(2048)
  quadraId    String
  quadra      Quadra     @relation(fields: [quadraId], references: [id])
  permissao   Permissao  @relation(fields: [permissaoId], references: [id])
  agendamentos Agendamento[]
}

model Quadra {
  id        String   @id @default(auto()) @map("_id")
  nome      String
  foto      String?  @db.VarChar(2048)
  descricao String
  usuarios  Usuario[]
}

model Agendamento {
  id        String   @id @default(auto()) @map("_id")
  dia       Int
  mes       Int
  ano       Int
  hora      Int
  status    Boolean
  usuarioId String?
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
}

model Placar {
  id           String @id @default(auto()) @map("_id")
  time         String
  pontuacao    Int
  vitorias     Int
  derrotas     Int
  empates      Int
  golsMarcados Int
}

model Permissao {
  id       String   @id @default(auto()) @map("_id")
  nome     String
  usuarios Usuario[]
}
